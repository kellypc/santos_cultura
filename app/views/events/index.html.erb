<h1 class="text-2xl font-bold mb-4">Agenda Cultural de Santos</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @events.each do |event| %>
    <div class="p-4 border rounded-lg shadow bg-white">
      <h2 class="text-xl font-semibold"><%= event.title %></h2>
      <p class="text-gray-600"><%= event.location %></p>
      <p class="text-sm text-gray-500"><%= l(event.start_date, format: :short) %> - <%= l(event.end_date, format: :short) %></p>
      <p class="mt-2"><%= truncate(event.description, length: 100) %></p>
      <a href="<%= event.url %>" target="_blank" class="text-blue-600 hover:underline">Saiba mais</a>
    </div>
  <% end %>
</div>
